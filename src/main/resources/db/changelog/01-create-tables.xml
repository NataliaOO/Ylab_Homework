<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="01-create-product-table" author="dmitry">
        <createTable schemaName="${app.schema}" tableName="product">
            <column name="product_id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="price" type="NUMERIC(19,2)">
                <constraints nullable="false"/>
            </column>

            <column name="quantity_in_stock" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex
                schemaName="${app.schema}"
                tableName="product"
                indexName="idx_product_name">
            <column name="name"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
